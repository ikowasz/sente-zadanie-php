<table class="table table-striped text-center">
	<thead>
		<tr>
			{% for row in rows %}
				<th scope="col">
					{% if row in availableSort %}
						{% if sortBy == row %}
							<small>{{ sortOrderIcon(sortOrder)|raw }}</small>
						{% endif %}

						<a href={{ path('orders_index', {
							'q': query,
							'sort_by': row,
							'sort_order': sortBy == row ? toggleSortOrder(sortOrder) : defaultOrder
						}) }}>
							{{ row|humanize }}
						</a>
					{% else %}
						{{ row|humanize }}
					{% endif %}
				</th>
			{% endfor %}
		</tr>
	</thead>

	<tbody>
		{% for order in orders %}
			<tr>
				{% for row in rows %}
					<td>
						{% if attribute(order, row).timestamp is defined %}
							{{ attribute(order, row)|date }}
						{% elseif row == 'invoiced' %}
							{{ order.invoiced ? 'Yes' : 'No' }}
						{% else %}
							{{ attribute(order, row) }}
						{% endif %}
					</td>
				{% endfor %}
			</tr>
		{% endfor %}
	</tbody>
</table>
